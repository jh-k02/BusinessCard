<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".ModifyActivity">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

        <ImageView
                android:id="@+id/modify_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/add_photo_icon"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="변경 전 이미지"/>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center">

        <EditText
                android:id="@+id/modify_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/modify_phonenumber"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center">

        <EditText
                android:id="@+id/modify_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="전화번호"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/modify_office"
                android:inputType="phone"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center">

        <EditText
                android:id="@+id/modify_office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="직장"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/modify_position"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center">

        <EditText
                android:id="@+id/modify_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="직위"
                android:singleLine="true"
                android:imeOptions="actionDone"/>

    </android.support.design.widget.TextInputLayout>



</LinearLayout>